<div class="all_position">  
  <div class="container">
    <h2>新規登録</h2>
    <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :名前 %> <em>(最大6文字)</em><br />
        <%= f.text_field :name, class: "enter", autofocus: true, placeholder:"例) ポートフォリオ山田", maxlength: "6" %>
      </div>

      <div class="field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, class: "enter", placeholder:"例) test@com" %>
      </div>

      <div class="field">
        <%= f.label :パスワード %><br />
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %>
        <%= f.password_field :password, class: "enter", placeholder:"例) abcdefg", autocomplete: "off" %>
      </div>

      <div class="field">
        <%= f.label :パスワード再確認 %><br />
        <%= f.password_field :password_confirmation, class: "enter", placeholder:"例) abcdefg", autocomplete: "off" %>
      </div>

      <div class="actions">
        <%= f.submit "登録", class: "sign_up" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>